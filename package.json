  "bugs": {
    "url": "https://github.com/CodeNow/charon/issues"
  },
  "homepage": "https://github.com/CodeNow/charon",
  "jshintConfig": {
    "node": true,
    "curly": true
  },
  "dependencies": {
    "101": "^1.2.0",
    "@runnable/api-client": "git@github.com:Runnable/api-client.git#changes-for-charon",
    "bluebird": "^3.1.1",
    "bunyan": "^1.4.0",
    "bunyan-loggly": "0.0.5",
    "bunyan-syslog": "^0.3.1",
    "callback-count": "^0.1.0",
    "debug": "^2.1.3",
    "dns-rcodes": "^1.0.0",
